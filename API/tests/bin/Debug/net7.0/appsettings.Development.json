{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Information"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File", 
        "Args": {
          "path": "/logs/log-.json", 
          "rollOnFileSizeLimit": true, 
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact", 
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Email",
        "Args": {
          "ConnectionInfo": {
            "FromEmail": "testSendLogs@localhost.com",
            "ToEmail": "testReceiveLogs@localhost.com",
            "Port": "1025",
            "MailServer": "localhost",
            "EnableSsl": false,
            "EmailSubject": "Exception in Marketplace API Application"
          }
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithThreadId", "WithMachineName"]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,14332; Database=marketplace_dev;User Id=sa;password=@SecurePassword#;Encrypt=false;MultipleActiveResultSets=true",
    "HangfireConnection": "Server=localhost,14332; Database=HangfireTest;User Id=sa;password=@SecurePassword#;Encrypt=false;MultipleActiveResultSets=true"
  },
  "ElasticApm": {
    "ServiceName": "Market Place API Service",
    "ServerUrl": "http://localhost:8200",
    "Environment": "Development",
    "CaptureBody": "all"
  },
  "JWT": {
    "Issuer": "http://127.0.0.1",
    "Audience": "http://127.0.0.1",
    "Key": "5c14f0c8dcdb6bd8840b660c2fdc59d6b62b4dfe8b5fd7a40e65d91e21805b4a",
    "Expiry": 60,
    "RefreshTokenExpiry": 120
  }
}
